<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ShipmentListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/logo_fsend"
            app:layout_constraintDimensionRatio="H,3:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/shipmentIndicator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:alpha="0.7"
            android:background="@color/transparent"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:tabBackground="@drawable/tab_pager_selector"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabMinWidth="32dp"
            app:tabPaddingEnd="16dp"
            app:tabPaddingStart="16dp" />

        <TextView
            android:id="@+id/sentShipments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sent_shipments"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/extra_white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shipmentIndicator"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <androidx.constraintlayout.widget.Group
            android:id="@+id/shipmentsIndicatorsGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="shipmentIndicator, sentShipments"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/noShipmentImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/no_shipments"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"/>

    <TextView
        android:id="@+id/noShipmentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_shipment_text"
        android:textSize="@dimen/text_size_medium_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/noShipmentImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shipmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/noShipmentGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="noShipmentImage, noShipmentText"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/shipmentsGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="shipmentRecyclerView"/>



</androidx.constraintlayout.widget.ConstraintLayout>