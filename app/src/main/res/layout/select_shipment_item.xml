<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingEnd="16dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/cardView"
    android:background="@drawable/custom_ripple"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <ImageView
                android:id="@+id/chevron_select"
                android:src="@drawable/ic_chevron_arrow_right"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/address_item"
                android:textColor="@color/gray80"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/addressSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/address_subtitle"
                android:textColor="@color/gray40"
                android:textSize="@dimen/text_size_xs"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressTitle"/>

            <TextView
                android:id="@+id/shipmentState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:text="@string/button_select_shipment"
                android:textColor="@color/color_main_green"
                android:textSize="@dimen/text_size_xs"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addressSubtitle"
                android:focusable="true" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSelectShipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:insetTop="20dp"
                android:layout_marginTop="-4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="32dp"
                android:inputType="text"
                android:backgroundTint="@color/color_main_green"
                android:textStyle="normal"
                android:text="@string/on_my_way"
                android:textSize="@dimen/text_size_xxs"
                android:fontFamily="@font/roboto"
                app:layout_constraintTop_toBottomOf="@id/addressSubtitle"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>