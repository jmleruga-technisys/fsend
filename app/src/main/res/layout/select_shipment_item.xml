<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_ripple"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/chevron_select"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_chevron_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto"
        android:text="@string/address_item"
        android:textColor="@color/gray80"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto"
        android:text="@string/address_subtitle"
        android:textColor="@color/gray40"
        android:textSize="@dimen/text_size_xs"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressTitle" />

    <TextView
        android:id="@+id/shipmentState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/button_select_shipment"
        android:textColor="@color/color_main_green"
        android:textSize="@dimen/text_size_xs"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressSubtitle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressSubtitle">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSelectShipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_main_green"
            android:fontFamily="@font/roboto"
            android:inputType="text"
            android:insetTop="20dp"
            android:text="@string/on_my_way"
            android:textSize="@dimen/text_size_xxs"
            android:textStyle="normal" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPostpone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_dark_orange"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="8dp"
            android:inputType="text"
            android:insetTop="20dp"
            android:text="@string/postpone"
            android:textSize="@dimen/text_size_xxs"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/buttonSelectShipment"
            app:layout_constraintTop_toBottomOf="@id/addressSubtitle" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>